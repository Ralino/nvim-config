{
  "coc.preferences.extensionUpdateCheck": "never",

  "diagnostic.errorSign": "X ",
  "diagnostic.warningSign": "! ",
  "diagnostic.infoSign": "i ",
  "diagnostic.hintSign": "? ",

  "list.insertMappings": {
    "<C-j>": "normal:j",
    "<C-k>": "normal:k"
  },

  "coc.preferences.rootPatterns": [
        "compile_commands.json",
        ".git",
        ".hg",
        ".projections.json"
  ],
  "languageserver": {
    "pyls": {
      "command": "/usr/bin/pyls",
      "args": [ "-v", "--log-file", "/tmp/pyls.log" ],
      "trace.server": "verbose",
      "filetypes": [ "python" ],
      "settings": {
        "pyls": {
          "enable": true,
          "trace": {
            "server": "verbose"
          },
          "commandPath": "",
          "plugins": {
            "jedi_completion": {
              "enabled": true
            },
            "jedi_hover": {
              "enabled": true
            },
            "jedi_references": {
              "enabled": true
            },
            "jedi_signature_help": {
              "enabled": true
            },
            "jedi_symbols": {
              "enabled": true,
              "all_scopes": true
            },
            "yapf": {
              "enabled": true
            },
            "pycodestyle": {
              "enabled": false
            },
            "mccabe": {
              "enabled": false
            }
          }
        }
      }
    }
  },
  "signature.preferShownAbove": false,
  "diagnostic.checkCurrentLine": true,
  "suggest.preferCompleteThanJumpPlaceholder": true
}
