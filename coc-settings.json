{
  "coc.preferences.extensionUpdateCheck": "never",
  
  "suggest.floatConfig": {
    "highlight": "Pmenu"
  },
  "floatFactory.floatConfig": {
    "highlight": "NormalFloat"
  },

  "suggest.virtualText": true,

  "diagnostic.errorSign": "X ",
  "diagnostic.warningSign": "! ",
  "diagnostic.infoSign": "i ",
  "diagnostic.hintSign": "? ",

  "codeLens.enable": true,
  "codeLens.position": "top",

  "list.insertMappings": {
    "<C-j>": "normal:j",
    "<C-k>": "normal:k"
  },

  "languageserver": {
    //"bitbake": {
    //  "command": "bitbake-language-server",
    //  "filetypes": ["bitbake"]
    //},
    "slint": {
      "command": "slint-lsp",
      "filetypes": ["slint"]
    }
  },

  "workspace.rootPatterns": [
        "compile_commands.json",
        ".git",
        ".hg",
        ".projections.json"
  ],
  "inlayHint.enable": false,
  "signature.preferShownAbove": false,
  "diagnostic.checkCurrentLine": true,
  "suggest.preferCompleteThanJumpPlaceholder": true,

  "clangd.fallbackFlags": ["-std=c++17"],
  "clangd.arguments": ["--header-insertion=never"],
  "coc.preferences.formatOnType": false,

  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--line-length", "79"]
}
